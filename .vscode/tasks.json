{
    "tasks": [
        {
          "type": "cppbuild",
          "label": "C/C++: g++ build all *.cpp in folder",
          "command": "/usr/bin/g++",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "*.cpp",
              "-o",
              "${fileDirnameBasename}",
              "-std=c++20"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
}